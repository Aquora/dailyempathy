datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

model User {
  id             String   @id @default(cuid())
  name           String?
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
